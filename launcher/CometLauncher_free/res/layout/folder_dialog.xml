<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folder_rename_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/folder_rename_bg"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" >

        <EditText
          android:id="@+id/folder_rename_te"
           android:singleLine="true"
           android:layout_gravity="center"
           android:gravity="left"
           android:textColor="#ffffff"
           android:background="@drawable/folder_rename_edit"
           android:layout_marginLeft="31dp"
           android:layout_marginBottom="-25dp"
            android:layout_width="240dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
    	android:id="@+id/folder_rename_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingBottom="15dp"
     
        >

        
        <ImageView
            android:id="@+id/folder_rename_cancel"
           
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@drawable/folder_rename_cancel_selcetor" />
          
         <ImageView
            android:id="@+id/folder_rename_done"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@drawable/folder_rename_done_selcetor" />

      
    </LinearLayout>

</LinearLayout>