<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/desktop_selector" >

    <ImageView
        android:id="@+id/img_pro_activity"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/pro"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/img_pro_activity"
        android:textSize="18sp" 
        />

    <TextView
        android:id="@+id/txt_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_title"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="1dp"
        android:textSize="15sp" />
    
    <ImageView
        android:id="@+id/img_new_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_title"
       android:layout_marginTop="14dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/new0"
        android:visibility="invisible" />

</RelativeLayout>