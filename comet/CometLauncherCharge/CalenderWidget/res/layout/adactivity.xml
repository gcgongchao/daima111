<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/adlinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/adicon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/adicon1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon2" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/adtitle" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/adintroduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adlinearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/wend" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/adwenzi" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addownload"
        android:layout_below="@+id/adintroduce"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="12dp" >

        <LinearLayout
            android:id="@+id/adlayoutIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/adviewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/adlayoutIndicator"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/addownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dib"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/adlvbtndownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                android:background="@drawable/btn_download"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>