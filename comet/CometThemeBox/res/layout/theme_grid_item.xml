<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/imageUsed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comet_item_selected"
            android:contentDescription="@string/thumbImage"
            android:visibility="invisible" />
        
        <ImageView
            android:id="@+id/imageThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/thumbImage"
            android:scaleType="fitCenter"
            android:layout_alignBottom="@id/imageUsed1" />
        
       	<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_alignLeft="@id/imageThumb"
		    android:layout_alignRight="@id/imageThumb"
            android:layout_alignBottom="@id/imageThumb"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginBottom="2dip"
            android:background="@drawable/comet_name_bg" >
        
	        <TextView 
	            android:id="@+id/themeName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#ffffffff"
	            android:textSize="10dip"
	            android:layout_gravity="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageUsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comet_item_selected"
            android:contentDescription="@string/thumbImage" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical" >
	    <ImageButton
	        android:id="@+id/buttonApply"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/button_apply"
	        android:paddingTop="5dip" />
	    
	    <ImageButton
	        android:id="@+id/buttonUsed"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/comet_used"
	        android:paddingTop="5dip" />
	    <ImageButton 
	        android:id="@+id/buttonDownload"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/button_download" />"
	    
	</RelativeLayout>
</LinearLayout>